<Window x:Class="WPFRormBirthDate.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFRormBirthDate"
        mc:Ignorable="d"
        Title="MainWindow" Height="263" Width="298">
    <StackPanel Margin="5">
        <StackPanel Orientation="Horizontal">
            <TextBox x:Name="tbDay" Width="50" Margin="5"/>
            <TextBox x:Name="tbMonth" Width="50" Margin="5"/>
            <TextBox x:Name="tbYear" Width="50" Margin="5"/>
            <Button x:Name="btnCalc" Content="Рассчитать" Margin="5" Width="75" Click="btnCalc_Click"/>
        </StackPanel>
        <DatePicker x:Name="dpBirthDate" Margin="5"/>
    </StackPanel>
</Window>
